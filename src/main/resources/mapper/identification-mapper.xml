<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sensorweb.datacenter.dao.IdentificationMapper">
    <sql id="insertFields">
        identification_identifier, identification_definition, identification_label, identification_value
    </sql>

    <sql id="selectFields">
        identification_id, identification_identifier, identification_definition, identification_label, identification_value
    </sql>

    <insert id="insertData" parameterType="Identification">
        INSERT INTO identification (<include refid="insertFields"></include>)
        VALUES (#{identifier}, #{definition}, #{label}, #{value})
    </insert>

    <delete id="deleteByIdentifier">
        DELETE FROM identification
        WHERE identification_identifier = #{identifier}
    </delete>

    <delete id="deleteByIdentifierNoNum">
        DELETE FROM identification
        WHERE identification_identifier like concat(#{identifier},%)
    </delete>

    <delete id="deleteById" parameterType="int">
        DELETE FROM identification
        WHERE identification_id = #{id}
    </delete>

    <select id="selectById" parameterType="int" resultMap="identification">
        SELECT <include refid="selectFields"></include>
        FROM identification
        WHERE identification_id = #{id}
    </select>

    <select id="selectByIdentifier" resultMap="identification">
        SELECT <include refid="selectFields"></include>
        FROM identification
        WHERE identification_identifier = #{identifier}
    </select>

    <select id="selectByValue" resultMap="identification">
        SELECT <include refid="selectFields"></include>
        FROM identification
        WHERE identification_value = #{value}
    </select>

    <select id="selectByLabel" resultMap="identification">
        SELECT <include refid="selectFields"></include>
        FROM identification
        WHERE identification_label = #{label}
    </select>

    <select id="selectByIdentifierNoNum" resultMap="identification">
        SELECT <include refid="selectFields"></include>
        FROM identification
        WHERE identification_identifier like concat(#{label},%)
    </select>

    <resultMap id="identification" type="Identification">
        <id property="id" column="identification_id"/>
        <result property="identifier" column="identification_identifier"/>
        <result property="value" column="identification_name"/>
        <result property="label" column="identification_label"/>
        <result property="definition" column="identification_definition"/>
    </resultMap>

</mapper>