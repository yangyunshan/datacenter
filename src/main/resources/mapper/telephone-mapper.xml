<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sensorweb.datacenter.dao.TelephoneMapper">
    <sql id="insertFields">
        telephone_identifier, telephone_voice, telephone_facsimile
    </sql>

    <sql id="selectFields">
        telephone_id, telephone_identifier, telephone_voice, telephone_facsimile
    </sql>

    <insert id="insertData" parameterType="Telephone">
        INSERT INTO telephone (<include refid="insertFields"></include>)
        VALUES (#{identifier}, #{voice}, #{facsimile})
    </insert>

    <delete id="deleteByIdentifier">
        DELETE FROM telephone
        WHERE telephone_identifier = #{identifier}
    </delete>

    <delete id="deleteById" parameterType="int">
        DELETE FROM telephone
        WHERE telephone_id = #{id}
    </delete>

    <update id="updateVoiceByIdentifier">
        UPDATE telephone SET telephone_voice = #{voice}
        WHERE telephone_identifier = #{identifier}
    </update>

    <update id="updateFacsimileByIdentifier">
        UPDATE telephone SET telephone_facsimile = #{facsimile}
        WHERE telephone_identifier = #{identifier}
    </update>

    <select id="selectById" parameterType="int" resultMap="telephone">
        SELECT <include refid="selectFields"></include>
        FROM telephone
        WHERE telephone_id = #{id}
    </select>

    <select id="selectByIdentifier" resultMap="telephone">
        SELECT <include refid="selectFields"></include>
        FROM telephone
        WHERE telephone_identifier = #{identifier}
    </select>
    <select id="selectByVoice" resultMap="telephone">
        SELECT <include refid="selectFields"></include>
        FROM telephone
        WHERE telephone_voice = #{voice}
    </select>
    <select id="selectByFacsimile" resultMap="telephone">
        SELECT <include refid="selectFields"></include>
        FROM telephone
        WHERE telephone_facsimile = #{facsimile}
    </select>

    <resultMap id="telephone" type="Telephone">
        <id property="id" column="telephone_id"/>
        <result property="identifier" column="telephone_identifier"/>
        <result property="voice" column="telephone_voice"/>
        <result property="facsimile" column="telephone_facsimile"/>
    </resultMap>

</mapper>