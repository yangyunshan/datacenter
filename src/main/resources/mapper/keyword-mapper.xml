<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sensorweb.datacenter.dao.KeywordMapper">
    <sql id="insertFields">
        keyword_identifier, keyword_value
    </sql>

    <sql id="selectFields">
        keyword_id, keyword_identifier, keyword_value
    </sql>

    <insert id="insertData" parameterType="Keyword">
        INSERT INTO keyword (<include refid="insertFields"></include>)
        VALUES (#{identifier}, #{values})
    </insert>

    <delete id="deleteByIdentifier">
        DELETE FROM keyword
        WHERE keyword_identifier = #{identifier}
    </delete>

    <delete id="deleteByIdentifierNoNum">
        DELETE FROM keyword
        WHERE keyword_identifier like concat(#{identifier},%)
    </delete>

    <delete id="deleteById" parameterType="int">
        DELETE FROM keyword
        WHERE keyword_id = #{id}
    </delete>

    <select id="selectById" parameterType="int" resultMap="keyword">
        SELECT <include refid="selectFields"></include>
        FROM keyword
        WHERE keyword_id = #{id}
    </select>

    <select id="selectByIdentifier" resultMap="keyword">
        SELECT <include refid="selectFields"></include>
        FROM keyword
        WHERE keyword_identifier = #{identifier}
    </select>

    <select id="selectByValue" resultMap="keyword">
        SELECT <include refid="selectFields"></include>
        FROM keyword
        WHERE keyword_value like concat(%,#{value},%)
    </select>

    <resultMap id="keyword" type="Keyword">
        <id property="id" column="keyword_id"/>
        <result property="identifier" column="keyword_identifier"/>
        <result property="values" column="keyword_value"/>
    </resultMap>

</mapper>