<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sensorweb.datacenter.dao.CapabilityMapper">
    <sql id="insertFields">
        capability_identifier, capability_name, capability_label, capability_definition, capability_value
    </sql>

    <sql id="selectFields">
        capability_id, capability_identifier, capability_name, capability_label, capability_definition, capability_value
    </sql>

    <insert id="insertData" parameterType="Capability">
        INSERT INTO capability (<include refid="insertFields"></include>)
        VALUES (#{identifier}, #{name}, #{label}, #{definition}, #{value})
    </insert>

    <delete id="deleteByIdentifier">
        DELETE FROM capability
        WHERE capability_identifier = #{identifier}
    </delete>

    <delete id="deleteByIdentifierNoNum">
        DELETE FROM capability
        WHERE capability_identifier like concat(#{identifier},%)
    </delete>

    <delete id="deleteById" parameterType="int">
        DELETE FROM capability
        WHERE capability_id = #{id}
    </delete>

    <select id="selectById" parameterType="int" resultMap="capability">
        SELECT <include refid="selectFields"></include>
        FROM capability
        WHERE capability_id = #{id}
    </select>

    <select id="selectByIdentifier" resultMap="capability">
        SELECT <include refid="selectFields"></include>
        FROM capability
        WHERE capability_identifier = #{identifier}
    </select>

    <select id="selectByName" resultMap="capability">
        SELECT <include refid="selectFields"></include>
        FROM capability
        WHERE capability_name = #{name}
    </select>

    <select id="selectByLabel" resultMap="capability">
        SELECT <include refid="selectFields"></include>
        FROM capability
        WHERE capability_label = #{label}
    </select>

    <select id="selectByIdentifierNoNum" resultMap="capability">
        SELECT <include refid="selectFields"></include>
        FROM capability
        WHERE capability_identifier like concat(#{label},%)
    </select>

    <resultMap id="capability" type="Capability">
        <id property="id" column="capability_id"/>
        <result property="identifier" column="capability_identifier"/>
        <result property="name" column="capability_name"/>
        <result property="label" column="capability_label"/>
        <result property="definition" column="capability_definition"/>
        <result property="value" column="capability_value"/>
    </resultMap>

</mapper>