<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sensorweb.datacenter.dao.EventMapper">
    <sql id="insertFields">
        event_identifier, event_label, event_documenturl, event_time
    </sql>

    <sql id="selectFields">
        event_id, event_identifier, event_label, event_documenturl, event_time
    </sql>

    <insert id="insertData" parameterType="Event">
        INSERT INTO event (<include refid="insertFields"></include>)
        VALUES (#{identifier}, #{label}, #{documentUrl}, #{time})
    </insert>

    <delete id="deleteByIdentifier">
        DELETE FROM event
        WHERE event_identifier = #{identifier}
    </delete>

    <delete id="deleteByIdentifierNoNum">
        DELETE FROM event
        WHERE event_identifier like concat(#{identifier},%)
    </delete>

    <delete id="deleteById" parameterType="int">
        DELETE FROM event
        WHERE event_id = #{id}
    </delete>

    <select id="selectById" parameterType="int" resultMap="event">
        SELECT <include refid="selectFields"></include>
        FROM event
        WHERE event_id = #{id}
    </select>

    <select id="selectByIdentifier" resultMap="event">
        SELECT <include refid="selectFields"></include>
        FROM event
        WHERE event_identifier = #{identifier}
    </select>

    <select id="selectByIdentifierNoNum" resultMap="event">
        SELECT <include refid="selectFields"></include>
        FROM event
        WHERE event_identifier like concat(#{identifier},%)
    </select>

    <select id="selectByLabel" resultMap="event">
        SELECT <include refid="selectFields"></include>
        FROM event
        WHERE event_label = #{label}
    </select>
    <select id="selectByDocumentUrl" resultMap="event">
        SELECT <include refid="selectFields"></include>
        FROM event
        WHERE event_documenturl = #{documentUrl}
    </select>

    <select id="selectByTime" resultMap="event">
        SELECT <include refid="selectFields"></include>
        FROM event
        WHERE event_time <![CDATA[<=]]> #{time}
    </select>

    <resultMap id="event" type="Event">
        <id property="id" column="event_id"/>
        <result property="identifier" column="event_identifier"/>
        <result property="label" column="event_label"/>
        <result property="documentUrl" column="event_documenturl"/>
        <result property="time" column="event_time"/>
    </resultMap>

</mapper>