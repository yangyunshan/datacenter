<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sensorweb.datacenter.dao.AddressMapper">
    <sql id="insertFields">
        address_identifier, address_deliverypoint, address_city, address_administrativearea, address_postalcode, address_country, address_electronicmailaddress
    </sql>

    <sql id="selectFields">
        address_id, address_identifier, address_deliverypoint, address_city, address_administrativearea, address_postalcode, address_country, address_electronicmailaddress
    </sql>

    <insert id="insertData" parameterType="Address">
        INSERT INTO address (<include refid="insertFields"></include>)
        VALUES (#{identifier}, #{deliveryPoint}, #{city}, #{administrativeArea}, #{postalCode}, #{country}, #{electronicMailAddress})
    </insert>

    <delete id="deleteByIdentifier">
        DELETE FROM address
        WHERE address_identifier = #{identifier}
    </delete>

    <delete id="deleteById" parameterType="int">
        DELETE FROM address
        WHERE address_id = #{id}
    </delete>

    <update id="updateMailByIdentifier">
        UPDATE address SET address_electronicmailaddress = #{mail}
        WHERE address_identifier = #{identifier}
    </update>

    <select id="selectById" parameterType="int" resultMap="address">
        SELECT <include refid="selectFields"></include>
        FROM address
        WHERE address_id = #{id}
    </select>

    <select id="selectByIdentifier" resultMap="address">
        SELECT <include refid="selectFields"></include>
        FROM address
        WHERE address_identifier = #{identifier}
    </select>
    <select id="selectByCity" resultMap="address">
        SELECT <include refid="selectFields"></include>
        FROM address
        WHERE address_city = #{city}
    </select>
    <select id="selectByAdministrativeArea" resultMap="address">
        SELECT <include refid="selectFields"></include>
        FROM address
        WHERE address_administrativearea = #{administrativeArea}
    </select>
    <select id="selectByCountry" resultMap="address">
        SELECT <include refid="selectFields"></include>
        FROM address
        WHERE address_country = #{country}
    </select>

    <resultMap id="address" type="Address">
        <id property="id" column="address_id"/>
        <result property="identifier" column="address_identifier"/>
        <result property="deliveryPoint" column="address_deliverypoint"/>
        <result property="city" column="address_city"/>
        <result property="administrativeArea" column="address_administrativearea"/>
        <result property="postalCode" column="address_postalCode"/>
        <result property="country" column="address_country"/>
        <result property="electronicMailAddress" column="address_electronicmailaddress"/>
    </resultMap>

</mapper>