<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sensorweb.datacenter.dao.ClassificationMapper">
    <sql id="insertFields">
        classification_identifier, classification_label, classification_definition, classification_value
    </sql>

    <sql id="selectFields">
        classification_id, classification_identifier, classification_label, classification_definition, classification_value
    </sql>

    <insert id="insertData" parameterType="Classification">
        INSERT INTO classification (<include refid="insertFields"></include>)
        VALUES (#{identifier}, #{label}, #{definition}, #{value})
    </insert>

    <delete id="deleteByIdentifier">
        DELETE FROM classification
        WHERE classification_identifier = #{identifier}
    </delete>

    <delete id="deleteByIdentifierNoNum">
        DELETE FROM classification
        WHERE classification_identifier like concat(#{identifier},%)
    </delete>

    <delete id="deleteById" parameterType="int">
        DELETE FROM classification
        WHERE classification_id = #{id}
    </delete>

    <select id="selectById" parameterType="int" resultMap="classification">
        SELECT <include refid="selectFields"></include>
        FROM classification
        WHERE classification_id = #{id}
    </select>

    <select id="selectByIdentifier" resultMap="classification">
        SELECT <include refid="selectFields"></include>
        FROM classification
        WHERE classification_identifier = #{identifier}
    </select>

    <select id="selectByIdentifierNoNum" resultMap="classification">
        SELECT <include refid="selectFields"></include>
        FROM classification
        WHERE classification_identifier like concat(#{identifier},%)
    </select>

    <select id="selectByValue" resultMap="classification">
        SELECT <include refid="selectFields"></include>
        FROM classification
        WHERE classification_value = #{value}
    </select>

    <select id="selectByLabel" resultMap="classification">
        SELECT <include refid="selectFields"></include>
        FROM classification
        WHERE classification_label = #{label}
    </select>

    <resultMap id="classification" type="Classification">
        <id property="id" column="classification_id"/>
        <result property="identifier" column="classification_identifier"/>
        <result property="label" column="classification_label"/>
        <result property="definition" column="classification_definition"/>
        <result property="value" column="classification_value"/>
    </resultMap>

</mapper>