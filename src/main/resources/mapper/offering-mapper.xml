<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sensorweb.datacenter.dao.OfferingMapper">
    <sql id="insertFields">
        offering_id, offering_name
    </sql>

    <sql id="selectFields">
        offering_id, offering_name
    </sql>

    <insert id="insertData" parameterType="Offering">
        INSERT INTO offering (<include refid="insertFields"></include>)
        VALUES (#{id}, #{name})
    </insert>

    <select id="getById" resultMap="offering">
        SELECT <include refid="selectFields"></include>
        FROM offering
        WHERE offering_id = #{id}
    </select>

    <select id="getAll" resultMap="offering">
        SELECT <include refid="selectFields"></include>
        FROM offering
    </select>

    <resultMap id="offering" type="Offering">
        <id property="id" column="offering_id"/>
        <result property="name" column="offering_name"/>
    </resultMap>
</mapper>