<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sensorweb.datacenter.dao.OfferingMapper">
    <sql id="insertFields">
        offering_id, offering_name, min_time, max_time
    </sql>

    <sql id="selectFields">
        offering_id, offering_name, min_time, max_time
    </sql>

    <insert id="insertData" parameterType="Offering">
        INSERT INTO offering (<include refid="insertFields"></include>)
        VALUES (#{id}, #{name}, #{minTime}, #{maxTime})
    </insert>

</mapper>